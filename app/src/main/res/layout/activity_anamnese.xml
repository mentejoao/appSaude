<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnamneseActivity">

    <!-- E-mail -->
    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_email"
        android:layout_marginHorizontal="16dp" />

    <!-- Data de aplicação do roteiro -->
    <TextView
        android:id="@+id/textView_data_aplicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de aplicação do roteiro *"
        app:layout_constraintTop_toBottomOf="@id/editText_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText_data_aplicacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_data_aplicacao"
        android:layout_marginHorizontal="16dp" />

    <!-- Hora de aplicação do roteiro -->
    <TextView
        android:id="@+id/textView_hora_aplicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de aplicação do roteiro"
        app:layout_constraintTop_toBottomOf="@id/editText_data_aplicacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText_hora_aplicacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_hora_aplicacao"
        android:layout_marginHorizontal="16dp" />

    <!-- Nome do avaliador -->
    <TextView
        android:id="@+id/textView_nome_avaliador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do avaliador *"
        app:layout_constraintTop_toBottomOf="@id/editText_hora_aplicacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText_nome_avaliador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_nome_avaliador"
        android:layout_marginHorizontal="16dp" />

    <!-- Função do avaliador -->
    <TextView
        android:id="@+id/textView_funcao_avaliador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Função do avaliador *"
        app:layout_constraintTop_toBottomOf="@id/editText_nome_avaliador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/checkbox_estagiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estagiário"
        app:layout_constraintTop_toBottomOf="@id/textView_funcao_avaliador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/checkbox_profissional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profissional"
        app:layout_constraintTop_toBottomOf="@id/checkbox_estagiario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView_dados_praticante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DADOS DO PRATICANTE / ALUNO / PACIENTE"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/checkbox_profissional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView_email_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/textView_dados_praticante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText_email_paciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_email_paciente"
        android:layout_marginHorizontal="16dp" />




    <!-- Botão Salvar -->
    <Button
        android:id="@+id/button_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintTop_toBottomOf="@id/editText_email_paciente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />





</androidx.constraintlayout.widget.ConstraintLayout>