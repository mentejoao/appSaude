<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CausasActivity">

    <!-- ScrollView para permitir a rolagem do texto longo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- TextView para exibir o texto informativo -->
        <TextView
            android:id="@+id/textView_conceito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:padding="16dp"
            android:scrollbars="vertical"
            android:text="Pode estar relacionada com fatores ambientais como hábitos de carregar peso incorretamente ou que geram sobrecarga excessiva na coluna vertebral, como dirigir por longos períodos, além do próprio envelhecimento. Também pode apresentar em menor proporção, a influência genética (Negrelli, 2001, p.40)."
            android:textSize="18sp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>