<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOR CRÔNICA"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Equilíbrio na bola suíça + rotação de tronco com peso e braços esticados"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Rotação de tronco com avanço de perna"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Elevação pélvica com um pé apoiado na bola"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Agachamento na bola suíça editado"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Afundo com extensão de braços"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6. Abdominal Oblíquo"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink5"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Seção DOR AGUDA -->
    <TextView
        android:id="@+id/textViewTitleAguda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOR AGUDA"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Prancha isométrica com flexão de braços"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleAguda"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Elevação pélvica"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Elevação de bastão com inclinação lateral"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Agachamento na cadeira + rotação de tronco com bastão"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink9"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewLink11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Abdominal infra com flexão e extensão de joelho"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLink10"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>