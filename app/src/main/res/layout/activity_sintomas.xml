<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SintomasActivity">

    <!-- ScrollView para permitir a rolagem do texto longo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TextView para exibir o texto informativo -->
        <TextView
            android:id="@+id/textView_conceito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dor, dormência (parestesia) na região lesada e/ou perda de força de movimento
ocasionada pela compressão nervosa. A dor costuma piorar com o aumento da pressão
intradiscal, ou seja, muitos pacientes sintomáticos sentem mais dor ao se manterem em posições
que aumentam essa pressão, como por exemplo, ao permanecerem sentados; sentindo assim
maior conforto quando deitados ou em pé."
            android:textSize="18sp"
            android:padding="16dp"
            android:lineSpacingExtra="6dp"
            android:scrollbars="vertical"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>